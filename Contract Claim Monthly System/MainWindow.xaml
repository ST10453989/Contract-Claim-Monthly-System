<Window x:Class="ClaimSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claim System" Height="650" Width="850" WindowStartupLocation="CenterScreen"
        Background="LightGray">
    
    <Grid>
        <Border CornerRadius="20" Background="White" Padding="20" Margin="20">
            <Grid>
                <!-- Sign-in Panel -->
                <StackPanel Name="SignInPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Claim System" FontSize="28" FontWeight="Bold" Foreground="#2D6EB2" HorizontalAlignment="Center"/>
                    <TextBlock Text="Sign In" FontSize="20" FontWeight="SemiBold" Margin="0,10,0,20" HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Username:" FontWeight="Bold"/>
                    <TextBox Name="UsernameBox" Width="250" Height="30" Margin="0,5,0,10" Padding="5"/>
                    
                    <TextBlock Text="Password:" FontWeight="Bold"/>
                    <PasswordBox Name="PasswordBox" Width="250" Height="30" Margin="0,5,0,10" Padding="5"/>
                    
                    <TextBlock Text="Role:" FontWeight="Bold"/>
                    <ComboBox Name="RoleComboBox" Width="250" Height="30" Margin="0,5,0,15">
                        <ComboBoxItem Content="Lecturer" IsSelected="True"/>
                        <ComboBoxItem Content="Coordinator"/>
                        <ComboBoxItem Content="Manager"/>
                    </ComboBox>
                    
                    <Button Content="Login" Width="120" Height="35" Background="#2D6EB2" Foreground="White" FontWeight="Bold" Click="LoginButton_Click"/>
                </StackPanel>

                <!-- Lecturer Dashboard -->
                <StackPanel Name="LecturerPanel" Visibility="Collapsed" Margin="10">
                    <TextBlock Text="Lecturer Dashboard" FontSize="24" FontWeight="Bold" Foreground="#2D6EB2" Margin="0,0,0,20"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Hours Worked:" Width="120" FontWeight="SemiBold"/>
                        <TextBox Name="HoursWorkedBox" Width="100" Height="25"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Hourly Rate:" Width="120" FontWeight="SemiBold"/>
                        <TextBox Name="HourlyRateBox" Width="100" Height="25"/>
                    </StackPanel>

                    <TextBlock Text="Additional Notes:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                    <TextBox Name="NotesBox" Height="60" Margin="0,5,0,10"/>

                    <Button Content="Upload Document" Width="150" Height="30" Background="#4CAF50" Foreground="White"
                            Margin="0,5,0,0" Click="UploadButton_Click"/>
                    <TextBlock Name="UploadedFileName" Text="" Margin="0,5,0,0" FontStyle="Italic" Foreground="Gray"/>

                    <Button Content="Submit Claim" Width="130" Height="35" Background="#2D6EB2" Foreground="White" FontWeight="Bold"
                            Margin="0,10,0,0" Click="SubmitClaim_Click"/>

                    <TextBlock Text="Your Claims:" FontWeight="Bold" FontSize="16" Margin="0,20,0,5"/>
                    <ListBox Name="ClaimsListBox" Height="200" BorderBrush="#2D6EB2" BorderThickness="1" />
                </StackPanel>

                <!-- Coordinator/Manager Dashboard -->
                <StackPanel Name="ApprovalPanel" Visibility="Collapsed" Margin="10">
                    <TextBlock Name="ApprovalTitle" Text="Approval Dashboard" FontSize="24" FontWeight="Bold" Foreground="#2D6EB2" Margin="0,0,0,20"/>
                    
                    <ListBox Name="PendingClaimsListBox" Height="400" BorderBrush="#2D6EB2" BorderThickness="1"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Approve" Width="100" Height="35" Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                Click="Approve_Click"/>
                        <Button Content="Reject" Width="100" Height="35" Background="#F44336" Foreground="White" FontWeight="Bold" 
                                Margin="10,0,0,0" Click="Reject_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
